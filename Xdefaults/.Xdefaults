! Requires perl extensions (urxvt-perls), urxvt-font-size-git.

*urxvt*scrollBar: false
*urxvt*saveLines: 65535

! Choice of font
*urxvt*.font: xft:Source\ Code\ Pro:Medium:size=10
! *urxvt*.font: xft:Roboto\ Mono\:Medium:size=10
! *urxvt*boldFont: xft:Ubuntu Mono:size=12:style=bold

*urxvt*letterSpace: -1
*urxvt*depth: 32
*urxvt*shading: 10
*urxvt*blurRadius: 10

! Perl extensions.
*urxvt*perl-lib: /usr/lib/urxvt/perl
*urxvt*perl-ext-common: default,matcher,clipboard,url-select,keyboard-select,font-size
*urxvt*url-select.launcher: chromium
*urxvt*url-select.underline: true
*urxvt*matcher.button: 1
/* *urxvt*url-launcher: /usr/bin/chromium */
*urxvt*keysym.Mod4-bracketleft: perl:keyboard-select:activate
*urxvt*keysym.C-equal: font-size:increase
*urxvt*keysym.C-minus: font-size:decrease
*urxvt*keysym.Mod4-u: perl:url-select:select_next

! Enable for transparency.
! *urxvt*background: rgba:0000/0000/0000/eeee

! Font settings
Xft.autohint: 0
Xft.lcdfilter: lcddefault
Xft.hintstyle: hintfull
Xft.hinting: 1
Xft.antialias: 1
Xft.dpi: 96
Xft.rgba: rgb

Emacs.FontBackend: xft
! Emacs.font: Source Code Pro:pixelsize=10

