" Keeping this around temporarilly.
" Use the normal vimrc instead.
" Pathogen
execute pathogen#infect()
syntax on
filetype plugin indent on

" Case settings
set ignorecase
set smartcase

" Critical remaps
let mapleader=","
inoremap jk <esc>

" Other Mappings
nnoremap <Leader>q :q!<CR>
nnoremap <Leader>cp :CtrlP<CR>
nnoremap <Leader>oo o<esc>S
nnoremap <Leader>py :!python %<CR>
nnoremap <Leader>p2 :!python2 %<CR>
nnoremap <Leader>rb :!ruby %<CR>
nnoremap <Leader>rh :!runhaskell %<CR>
nnoremap <Leader>mr :MRU<CR>
nnoremap <Leader>nt :NERDTree<CR>
nnoremap <Leader>pl :!perl %<CR>
nnoremap <Leader>asc ggVG:Tab /;<CR>
nnoremap <Leader>pdf :!pdflatex % && !okular %<CR>
nnoremap <Leader>xxd :%!xxd<CR>
nnoremap <Leader>xxr :%!xxd -r<CR>
set pastetoggle=<Leader>pst

" Smart navigation
map <C-j> <C-W>j
map <C-k> <C-W>k
map <C-h> <C-W>h
map <C-l> <C-W>l

" Tabbing
set expandtab
set tabstop=2
set shiftwidth=2
set autoindent
set number
color emacs

" Backups
set nobackup
set noswapfile

" Special
autocmd FileType python setlocal shiftwidth=4 tabstop=4
